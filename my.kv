<Button>
    size_hint:(.2,.2)
    font_size:30


<LoginScreen>
    BoxLayout:
        orientation:"vertical"
        size:root.width,root.height

        TextInput:
            id:calc_input
            multiline:False
            background_color:(.4,.5,1,1)
            text:"0"
            font_size:65
            size_hint:(1,.15)

        GridLayout:
            cols:4
            rows:5

            Button:
                text:"%"
                background_color:(.6,.6,.6,1)           
                on_press:root.percentage()
            Button:
                text:"bs"
                background_color:(.6,.6,.6,1)            
                on_press:root.remove()
            Button:
                id:clear
                text:"C"
                background_color:(.6,.6,.6,1)                
                on_press:root.clear()
            Button:
                text:"/" 
                background_color:(.6,.6,.6,1)  
                on_press:root.add("/")             
            Button:
                text:"7"
                on_press:root.btn_press(7)
            Button:
                text:"8"
                on_press:root.btn_press(8)
            Button:
                text:"9"
                on_press:root.btn_press(9)
            Button:
                text:"*"
                background_color:(.6,.6,.6,1)
                on_press:root.add("*")
            Button:
                text:"4"
                on_press:root.btn_press(4)
            Button:
                text:"5"
                on_press:root.btn_press(5)
            Button:
                text:"6"
                on_press:root.btn_press(6)
            Button:
                text:"-"
                background_color:(.6,.6,.6,1)
                on_press:root.add("-")
            Button:
                text:"1"
                on_press:root.btn_press(1)
            Button:
                text:"2"
                on_press:root.btn_press(2)
            Button:
                text:"3"
                on_press:root.btn_press(3)
            Button:
                text:"+"
                background_color:(.6,.6,.6,1)
                on_press:root.add("+")
            Button:
                text:"+/-"
                on_press:root.min_neg( )
            Button:
                text:"0"
                on_press:root.btn_press(0)
            Button:
                text:"."
                on_press:root.dot()
            Button:
                text:"="
                background_color:(.6,.6,.6,1)
                on_press:root.equals()